generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  SUCCESS
  PENDING
  ERROR
}

model profile {
  id       String @id @default(uuid())
  name     String
  username String
  imageURL String @db.Text
  email    String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model problem {
  id               String @id @default(uuid())
  title            String
  description      String
  examples         Json
  constraints      String
  followUpQuestion String

  runTestCases    Int[]
  submitTestCases Int[]
}

model runSubmission {
  id       String @id @default(uuid())
  language String
  filepath String
  status   Status @default(PENDING)
  output   String

  submittedAt DateTime @default(now())
  startedAt   DateTime?
  completedAt DateTime?
}
